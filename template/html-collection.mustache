<!DOCTYPE html>
<html>
    <head>
        <title>{{app.name}} {{name}} collection</title>
    </head>
    <body>
        <h1><a href="{{app.appUrl}}">{{app.name}}</a></h1>
        <h2><a href="{{url}}">{{name}}</a></h2>
        <h3>Items</h3>
{{#permissions.upsertItem}}
        <form id="locate-upsert-item" action="{{upsert-item-url}}" method="POST">
            <label for="itemId">Id</label>
            <input name="itemId" />
            <input type="submit" value="Find add/update form" />
        </form>
{{/permissions.upsertItem}}
{{#permissions.addItem}}
        <form id="add-item" action="{{url}}" method="POST">
            <label for="content">Content</label>
            <textarea name="content"></textarea>
            <input type="submit" value="Add item" />
        </form>
{{/permissions.addItem}}
{{#permissions.deleteCollection}}
        <div>
            <a href="{{delete-collection-url}}">Delete collection</a>
        </div>
{{/permissions.deleteCollection}}
        <ul>
            {{#items}}
            <li><a href="{{{url}}}">{{id}}</a></li>
            {{/items}}
        </ul>
    </body>
</html>